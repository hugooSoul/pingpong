<%= simple_form_for @log do |f| %>

  <div class="form-group">
    <%= f.date_select :date, class: "form-control", label: false %>
  </div>

  <div class="form-group">
    <%= f.collection_select :oponent, User.all.where.not(email: current_user.email), :email, :email, {:prompt => 'Please choose your oponent'} %>
  </div>

  <div class="form-group">
    <%= f.number_field :my_score, class: "form-control", label: false , placeholder: "My Score", min: 1, max: 21 %>
  </div>

  <div class="form-group">
    <%= f.number_field :their_score, class: "form-control", label: false , placeholder: "Their Score", min: 1, max: 21 %>
  </div>

  <%= f.button :submit, class: "btn btn-md btn-success" %>

<% end %>
