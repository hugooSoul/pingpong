<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>
  <tbody>

    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.email %></td>
        <td>X</td>
        <td>
          <% if u.logs.count > 0 %>
            <%= u.logs.count %>
          <% else %>
            X
          <% end %>
        </td>
      </tr>
    <% end %>

  </tbody>
</table>

