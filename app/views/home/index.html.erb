<h1 class='page-header'>Leaderboard</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Score</th>
      <th>Games Played</th>
    </tr>
  </thead>
  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td>X</td>
        <td><%= user.email %></td>
        <td>X</td>
        <td><%= user.logs.count %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<%= image_tag('leaderboard.png') %>
